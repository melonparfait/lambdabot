{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./dist/js",
    "sourceMap": false,
    "types": [
      "node",
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "**.spec.ts"
  ]
}
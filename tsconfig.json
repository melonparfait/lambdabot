{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./dist/js",
    "sourceMap": false,
    "types": [
      "node",
      "mocha",
      "lodash",
      "sinon",
      "chai",
      "sinon-chai"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}